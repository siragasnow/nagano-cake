<div class="container">
	<div class="row">
	<h2>配送先編集</h2>
		<!-- error-message -->
		<% if @delivery_address.errors.any? %>
			<div class="error_explanation">
			  <h2><%= @delivery_address.errors.count %> 件のエラーのため変更点を保存できませんでした。</h2>
			  <ul>
			  <% @delivery_address.errors.full_messages.each do |message| %>
			    <li><%= message %></li>
			  <% end %>
			  </ul>
		    </div>
			<% end %>
		<!-- / -->
		<%= form_for(@delivery_address) do |f| %>
		<div class="edit-delivery-table">
			<div>
				<table class="table">
					<tbody>
						<tr class="row">
							<th class="col-xs-3">郵便番号</th>
							<td class="col-xs-9 row">
								<div class="col-xs-4"><%= f.text_field :zip_code, class:"form-control" %></div>
							</td>
						</tr>
						<tr class="row">
							<th>住所</th>
							<td>
								<div class="col-xs-10"><%= f.text_field :address, class:"form-control" %></div>
							</td>
						</tr>
						<tr class="row">
							<th>宛名</th>
							<td>
								<div class="col-xs-5">
									<%= f.text_field :name, class:"form-control" %>
								</div>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
		<div class="update-delivery-btn-wrap row">
			<%= f.submit '登録する', class:"create-delivery-btn btn btn-primary" %>
		</div>
		<% end %>
	</div>
</div>
