<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h2>商品一覧画面</h2>
      <div class="new-btn-wrap">
        <%= link_to "商品登録", new_admin_product_path, class: "btn btn-primary btn-new-register btn-lg"; %>
      </div>
        <table class="table">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜き価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @products.each do |product| %>
            <tr>
              <td><%= product.id %></td>
              <td><%= link_to product.name, admin_product_path(product.id) %></td>
              <td><%= "#{product.price}円" %></td>
              <td><%= product.genre.name %></td>
              <td><%= product.sales_status ? "販売中" : "販売停止中" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <div class="row text-center">
          <%= paginate @products, class: "paginate" %>
        </div>
    </div>
  </div>
</div>