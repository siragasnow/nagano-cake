<h2>商品一覧画面</h2>
<%= link_to "商品登録", new_admin_product_path %>
<table class="table">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜き価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= product.id %></td>
      <td><%= link_to product.name, admin_product_path(product.id) %></td>
      <td><%= "#{product.price}円" %></td>
      <td><%= product.genre_id %></td>
      <td><%= product.sales_status %></td>
    </tr>
    <% end %>
  </tbody>
</table>