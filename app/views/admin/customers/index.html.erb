<div class="container">
  <h2 class="admin-customers-index-title">会員一覧画面</h2>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <table class="table table-hover table-inverse">
        <thead>
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to (customer.last_name + customer.first_name), admin_customer_path(customer) %></td>
              <td><%= customer.email %></td>
              <td><%= customer.admittion_status=="validity" ? '有効' : '退会済' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="row admin-customers-index-paginate">
        <%= paginate @customers, class: "paginate text-center" %>
      </div>
    </div>
  </div>
</div>