<div class="container">
  <div class="row mt-5">
    <div class="col-xs-4 col-xs-offset-4">

      <div class="row form-horizontal">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email, "メールアドレス", class:"col-xs-4 controll-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-xs-8" %>
          </div>

          <div class="form-group">
            <%= f.label :password, "パスワード", class:"col-xs-4 controll-label" %>
            <%= f.password_field :password, autocomplete: "current-password", class:"col-xs-8" %>
          </div>
<!--
          <% if devise_mapping.rememberable? %>
            <div class="form-group">
              <div class="col-xs-10 col-xs-offset-2">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, "パスワードを保存する" %>
              </div>
            </div>
          <% end %>
 -->
          <div class="form-group">
              <%= f.submit "ログイン", class:"col-xs-4 col-xs-offset-4 btn btn-primary" %>
          </div>
        <% end %>

<!--         <%= render "admin/devise/shared/links" %> -->
      </div>

    </div>
  </div>
</div>
