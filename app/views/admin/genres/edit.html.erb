<div class="container">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">

			<!-- error-message -->
			<% if @genre.errors.any? %>
			<div class="error_explanation">
			  <h2><%= @genre.errors.count %> errors prohibited this obj from being saved:</h2>
			  <ul>
			  <% @genre.errors.full_messages.each do |message| %>
			    <li><%= message %></li>
			  <% end %>
			  </ul>
		    </div>
			<% end %>

			<h2>ジャンル編集画面</h2>
			<div class="edit-genre-form">
				<%= form_for [:admin, @genre] do |f| %>
				<!-- edit form -->
				<div class="row edit-form form-group form-group-lg">
					<div class="col-xs-2"><%= f.label :name, "ジャンル", class:"control-label" %></div>
					<div class="col-xs-8"><%= f.text_field :name, class:"form-control" %></div>
				</div>

				<!-- radio button -->
				<div class="row edit-radio-button">
					<div class="col-xs-2">
						<label>ステータス</label>
					</div>
					<div class="col-xs-8">
						<%= f.label :name, "有効" %>
						<%= f.radio_button :active_status, :"有効", checked: true %>
						<%= f.label :name, "無効" %>
						<%= f.radio_button :active_status, :"無効" %>
					</div>
				</div>

				<!-- update button -->
				<div class="row edit-update-button col-xs-8 col-xs-offset-2">
					<%= f.submit '変更を追加する', class:"btn btn-success" %>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
