<div class="container">
	<div class="row">
		<div class="order-show col-xs-10 col-xs-offset-1">
			<h2>注文履歴詳細</h2>
			<div class="row">
				<!-- 注文情報 -->
				<div class=" order-info col-xs-7">
					<h3>注文情報</h3>
					<div class="order-table">
						<table class="table">
							<tbody>
								<tr>
									<th class="active">注文日</th>
									<td><%= @order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
								</tr>
								<tr>
									<th class="active">配送先</th>
									<td>
										<%= @order.zip_code %><br>
										<%= @order.delivery_address %><br>
										<%= @order.delivery_name %>
									</td>
								</tr>
								<tr>
									<th class="active">支払方法</th>
									<td><%= @order.payment_method %></td>
								</tr>
								<tr>
									<th class="active">ステータス</th>
									<td><%= @order.status %></td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
				<!-- 請求情報 -->
				<div class="col-xs-3">
					<h3>請求情報</h3>
					<div>
						<table class="table">
							<tbody>
								<tr>
									<th class="active">商品合計</th>
									<td class="text-right"><%= @order.product_sum %>円</td><!-- .product_sumはorderモデルで定義あり -->
								</tr>
								<tr>
									<th class="active">配送料</th>
									<td class="text-right"><%= @order.postage %>円</td>
								</tr>
								<tr>
									<th class="active">ご請求額</th>
									<td class="text-right"><%= @order.payment %>円</td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
			<!-- 注文内容 -->
			<div class="row">
				<div class="col-xs-8">
					<h3>注文内容</h3>
					<div>
						<table class="table">
							<thead>
								<tr>
									<th class="active">商品</th>
									<th class="active">単価（税込）</th>
									<th class="active">個数</th>
									<th class="active">小計</th>
								</tr>
							</thead>
							<tbody>
								<% @order.order_products.each do |order_product| %>
								<tr>
									<td><%= order_product.product.name %></td>
									<td class="text-right"><%= order_product.ordered_price %>円</td>
									<td class="text-right"><%= order_product.count %></td>
									<td class="text-right"><%= order_product.subtotal_price %>円</td><!-- .subtotal_priceはorder_productモデルで定義あり -->
								</tr>
								<% end %>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
