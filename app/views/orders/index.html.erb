<div class="container">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<h2>注文履歴一覧</h2>
			<div class="orders-table">
				<table class="table">
					<thead>
						<tr class="active">
							<th>注文日</th>
							<th>配送先</th>
							<th>注文商品</th>
							<th>支払金額</th>
							<th>ステータス</th>
							<th>注文詳細</th>
						</tr>
					</thead>
					<tbody class="order-items">
						<% current_customer.orders.each do |order| %>
						<tr>
							<td><%= order.created_at.strftime('%Y/%m/%d') %></td>
							<td>
								<%= order.zip_code %><br>
								<%= order.delivery_address %><br>
								<%= order.delivery_name %>
							</td>
							<td>
								<%= order.order_products.map{|order_product| order_product.product.name}.join('<br>').html_safe %>

							</td>
							<td><%= order.payment %>円</td>
							<td><%= order.status %></td>
							<td><%= link_to "表示する", order_path(order.id), class:"btn btn-primary" %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>