<div class="container">
  <div class="ec-customer-edit-title-group">
    <h2 class="ec-customers-edit-title">登録情報編集</h2>
    <%= link_to '退会する', withdraw_confirm_customer_path, class: "btn btn-danger" %>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-inline" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <table class="table admin-customers-edit-table">
      <tr>
        <th class="col-xs-2"><%= f.label "氏名" %></th>
        <td class="col-xs-10">
          <%= f.text_field :last_name, autofocus: true, class:"form-control" %>
          <%= f.text_field :first_name, class:"form-control" %>
        </td>
      </tr>
      <tr>
        <th><%= f.label "フリガナ" %></th>
        <td>
          <%= f.text_field :kana_last_name, class:"form-control" %>
          <%= f.text_field :kana_first_name, class:"form-control" %>
        </td>
      </tr>
        <th><%= f.label "郵便番号" %></th>
        <td><%= f.text_field :zip_code, class:"form-control" %></td>
      </tr>
      <tr>
        <th><%= f.label "住所" %></th>
        <td><%= f.text_field :address, class:"form-control", style:"width: 60%;" %></td>
      </tr>
      <tr>
        <th><%= f.label "電話番号" %></th>
        <td><%= f.text_field :tel, class:"form-control" %></td>
      </tr>
      <tr>
        <th><%= f.label "メールアドレス" %></th>
        <td><%= f.text_field :email, autocomplete: "email", class:"form-control" %></td>
      </tr>
    </table>
    <div>
        <%= f.submit "編集内容を保存する", class:"btn btn-success" %>
    </div>
  <% end %>
</div>